extends layout

block content
  .row.page-header
    .col-lg-12
      h1 #{pageHeader.title}
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/locatio", method="get", role="form")
        .form-group
          label.col-xs-2.col-sm-2.control-label(for="name") Nombre
          .col-xs-10.col-sm-10
            p.form-control-static #{user.displayName}
          label.col-xs-10.col-sm-2.control-label(for="rating") Puntaje
          .col-xs-12.col-sm-2
            select.form-control.input-sm(name="rating")
              option 5
              option 4
              option 3
              option 2
              option 1
        .form-group
          label.col-sm-2.control-label(for="review") Analisis
          .col-sm-10
            textarea#review.form-control(name="review", rows="5")
        button.btn.btn-default.pull-right Agregar Analisis
    .col-xs-12.col-md-4
